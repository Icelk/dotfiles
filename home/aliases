# Rebind programs to easier/common names

# Common small utils
alias s="doas"
alias e="exit 0"
alias c="clear"
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"
alias rsn="rsync -rvPhL --del --exclude '**target**' --exclude '**.git/' --exclude '**.pem' --exclude '**private'"
alias sssh="kitty +kitten ssh use-python"

# Systemctl
alias sctl="sudo systemctl"
alias sctlu="systemctl --user"

# Git
alias gclo="git clone"
alias gr="git rm --cache"
alias gp="git push"
alias gpu="git pull"
alias gpp="git pull && git push"
alias gf="git fetch"

alias ga="git add"
alias gaa="git add *"
alias gc="git commit -m"
alias gs="git status"
alias gd="git diff"
alias gl="git log"
alias gu="git reset"

alias gst="git stash -u"
alias gstp="git stash pop"

alias gch="git checkout"
alias gm="git merge"
alias gms="git merge --squash"
alias gmt="git mergetool"
alias gcp="git cherry-pick"

alias gsm="git submodule"
alias gcfg="git config --global"

# Rust clones
alias ls="exa -la -s=Name --group-directories-first --git"
alias grep="rg --hidden --one-file-system"
alias find="fd --hidden --one-file-system"

# Cargo
alias cb="cargo build"
alias cbr="cargo build --release"
alias cr="cargo run"
alias crr="cargo run --release"
alias ct="cargo test"
alias ca="cargo add"
alias cl="cargo clippy"
alias ciwd="cargo install --path ."

# Pacman / Paru
alias pa="paru -S"
alias pr="paru -Rns"
alias pl="paru -Qi"
alias pi="paru -Si"
