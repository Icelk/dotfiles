# Rebind programs to easier/common names

# Common small utils
alias s="doas"
alias e="exit"
alias c="clear"
alias cp="cp -i"
alias mv="mv -i"
alias cu="cd .."

# Systemctl
alias sctl="sudo systemctl"
alias sctlu="systemctl --user"

# Git
alias gclo="git clone"
alias gr="git remove --cache"
alias gp="git push"
alias gpp="git push && git pull"
alias gc="git commit -m"
alias gs="git status"
alias ga="git add"
alias gaa="git add *"
alias gd="git diff"
alias gu="git reset"

# Rust clones
alias ls="exa -la -s=Name --group-directories-first"
alias cat="bat"
alias grep="rg --hidden --one-file-system"
alias find="fd --hidden --one-file-system"

# Cargo
alias cb="cargo build"
alias cbr="cargo build --release"
alias cr="cargo run"
alias crr="cargo run --release"
alias ct="cargo test"
alias ca="cargo add"
alias cclip="cargo clippy"
alias ciwd="cargo install --path ."


# Aliases for useful complicated commands I don't want to memorize

alias open="xdg-open"
alias audio-reset="puleaudio -k && sudo alsa force-reload && pulseaudio --start"
