# Rebind programs to easier/common names

# Common small utils
alias s="sudo"
alias e="exit 0"
alias c="clear"
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# Git
alias gclo="git clone"
alias gr="git rm --cache"
alias gp="git push"
alias gpp="git pull && git push"
alias gc="git commit -m"
alias gs="git status"
alias ga="git add"
alias gaa="git add *"
alias gd="git diff"
alias gu="git reset"

# Rust clones
alias ls="exa -la -s=Name --group-directories-first --git"
alias cat="bat"
alias grep="rg --hidden --one-file-system"
alias find="fd --hidden --one-file-system"

# Cargo
alias cb="cargo build"
alias cbr="cargo build --release"
alias cr="cargo run"
alias crr="cargo run --release"
alias ct="cargo test"
alias ca="cargo add"
alias cclip="cargo clippy"
alias ciwd="cargo install --path ."

# Pacman / Paru
alias pa="paru -S"
alias pr="paru -Rns"
alias pu="paru && doas pacdiff"
alias pl="paru -Qi"
alias pi="paru -Si"

# Aliases for useful complicated commands I don't want to memorize
alias upgrade="brew upgrade; and brew upgrade --cask"
alias ssh-proxy="ssh -TN icelk.dev -D"
## Export PRoxy
alias epr="export ALL_PROXY='socks5h://localhost:41523'"
