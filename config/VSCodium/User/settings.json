{
    "git.enableSmartCommit": true,
    "cSpell.enabled": true,
    "cSpell.language": "sv,en-GB",
    "cSpell.enableFiletypes": [
        "ini",
        "shellscript"
    ],
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "files.autoSave": "onFocusChange",
    "files.hotExit": "off",
    "git.confirmSync": false,
    "workbench.startupEditor": "newUntitledFile",
    "files.watcherExclude": {
        "**cache**": true,
        "**target/**": true
    },
    "rust-analyzer.cargo.allFeatures": true,
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "explorer.incrementalNaming": "smart",
    "editor.fontFamily": "'FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "cSpell.userWords": [
        "pacman"
    ],
    "terminal.integrated.shell.linux": "/usr/bin/fish",
    "explorer.autoReveal": false,
    "gitlens.views.contributors.pullRequests.enabled": false,
    "gitlens.views.searchAndCompare.pullRequests.enabled": false,
    "gitlens.views.remotes.pullRequests.enabled": false,
    "gitlens.views.branches.pullRequests.enabled": false,
    "workbench.colorTheme": "Monokai",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "vim.useSystemClipboard": true,
    "window.zoomLevel": 1,
    "vim.autoindent": false
}
