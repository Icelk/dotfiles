# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!


## Variables

set $mod Mod4

set $rofi ~/scripts/rofi/launch.sh
set $change-theme ~/scripts/theme-change-rofi.fish
set $open-dev ~/scripts/rofi/open-dev.sh
set $toggle-service ~/scripts/service-toggle.sh
set $playerctl ~/scripts/playerctl-fast.sh
set $playerctl-play-pause ~/scripts/playerctl-custom.sh
set $restart ~/scripts/restart.sh
set $clipboard-clear ~/scripts/clipcat-clear.sh

set $granular_adjustment 1
set $rough_adjustment 8


## Other setup

# Disable focus wrapping
focus_wrapping no

# 2px border
# CORPL section for_window [class = "^.*"] border pixel
#  0 # dark
for_window [class = "^.*"] border pixel 2 # light
# CORPL end

# Gaps
gaps outer 0
gaps inner 8
gaps top 24

# Enable back and fourth
workspace_auto_back_and_forth yes

# Set border colors
# CORPL option dark

# set $lock-color \#000000

# CORPL option light

set $color #bfd3ef

#class                  border  backgr. text    indicator child_border
client.focused_inactive $color  $color  $color  $color    $color
client.unfocused        $color  $color  $color  $color    $color
client.focused          #1793D1 #1793D1 #1793D1 #1793D1   #1793D1

set $lock-color \#3f3f3f

# CORPL end


## Bind apps

# Single applications

bindsym $mod+Return exec --no-startup-id alacritty
bindsym $mod+w exec brave
bindsym $mod+Shift+w exec brave --disable-frame-rate-limit
bindsym $mod+c exec --no-startup-id codium .
bindsym $mod+f exec thunar
bindsym $mod+s exec --no-startup-id "alacritty -e spt"
bindsym $mod+m exec --no-startup-id mailspring


# CLIs

bindsym $mod+p exec --no-startup-id "alacritty -e pulsemixer"
bindsym $mod+Shift+Escape exec --no-startup-id "alacritty -e top"


# Rofi
bindsym $mod+d exec --no-startup-id $open-dev
bindsym $mod+b exec clipcat-menu
bindsym $mod+Shift+t exec $change-theme


# No-ui utilities

bindsym $mod+Escape exec --no-startup-id ~/scripts/sleep.sh
bindsym $mod+Print exec --no-startup-id ~/scripts/screenshot-whole.sh
bindsym Print exec --no-startup-id ~/scripts/screenshot.sh
bindsym $mod+Shift+s exec --no-startup-id "$toggle-service spotifyd Services"
bindsym $mod+Shift+q exec --no-startup-id "dunstctl close"
bindsym Pause exec --no-startup-id i3lock -c $lock-color
bindsym $mod+Shift+b exec --no-startup-id $clipboard-clear
bindsym $mod+r exec --no-startup-id $restart


## Workspace locations
workspace 1 output DP-2
workspace 2 output DP-0


## Fonts

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans 8


## Audio

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id $playerctl-play-pause
bindsym XF86AudioPause exec --no-startup-id $playerctl-play-pause
bindsym XF86AudioNext exec --no-startup-id $playerctl next
bindsym XF86AudioPrev exec --no-startup-id $playerctl previous

#bindsym Shift+XF86AudioNext exec --no-startup-id playerctl position 5+
#bindsym Shift+XF86AudioPrev exec --no-startup-id playerctl position 5-

bindsym XF86AudioRaiseVolume exec --no-startup-id ponymix increase 5%
bindsym XF86AudioLowerVolume exec --no-startup-id ponymix decrease 5%

bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id ponymix increase 1%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id ponymix decrease 1%


## Rofi

# Start rofi
bindsym $mod+space exec $rofi appmenu
bindsym $mod+Pause exec $rofi powermenu


## Other bindings

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Kill focused window
bindsym $mod+q kill

# Enter fullscreen mode for the focused container
bindsym $mod+F11 fullscreen toggle

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle


## Focus

# Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Change focus between tiling / floating windows
bindsym $mod+Ctrl+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Focus the child container
#bindsym $mod+d focus child


## Workspace management

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Split in horizontal orientation
bindsym $mod+x split h

# Split in vertical orientation
bindsym $mod+z split v

# Change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move focused workspace between screens

bindsym $mod+Tab move workspace to output right
bindsym $mod+Shift+Tab move workspace to output left


## Resize

bindsym $mod+h resize shrink width $rough_adjustment px or $rough_adjustment
bindsym $mod+j resize grow height $rough_adjustment px or $rough_adjustment
bindsym $mod+k resize shrink height $rough_adjustment px or $rough_adjustment
bindsym $mod+l resize grow width $rough_adjustment px or $rough_adjustment
bindsym $mod+Shift+h resize shrink width $granular_adjustment px or $granular_adjustment
bindsym $mod+Shift+j resize grow height $granular_adjustment px or $granular_adjustment
bindsym $mod+Shift+k resize shrink height $granular_adjustment px or $granular_adjustment
bindsym $mod+Shift+l resize grow width $granular_adjustment px or $granular_adjustment


## i3 development

# Reload the configuration file
bindsym $mod+Shift+c reload


## Start programs
set $sctlu --no-startup-id systemctl --user

# Composter
exec $sctlu restart picom

# Notifications
exec $sctlu restart dunst

# Status bar
exec $sctlu restart polybar

# Clipboard manager
exec $sctlu restart clipcat

# Wallpaper
exec $sctlu start nitrogen

# File manager
exec $sctlu start thunar

# Start checking systemctl for failed services
exec --no-startup-id $sctlu start check-failed.timer


# Lock screen on startup
exec --no-startup-id i3lock -c $lock-color
